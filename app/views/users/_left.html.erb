<!--ログインユーザーの表示-->
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th><th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th><th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-sm btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>
<!-------------------------->

<!--本の感想　新規作成-->
<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>
