<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/left', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %><br />
              <%= link_to user_path(@book.user) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-sm btn-danger",data: { confirm: "本当に消しますか？" }  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>