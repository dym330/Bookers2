<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/left', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--エラー文章-->
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <!-------------->
      <%= render 'users/books_list', books: @books %>
    </div>
  </div>
</div>